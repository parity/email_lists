<% if @subscription.errors.any? %>
  <div class="text-danger">
    <div class="alert alert-danger">
      The form contains <%= pluralize(@subscription.errors.count, "error") %>.
    </div>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li>* <%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>