<%= provide(:title,"All Lists") %>
<h1>All Lists </h1>
<% if @lists.any? %>
	<%= will_paginate %>
	<ol>
		<% @lists.each do |list| %>
			<li>
				<%= link_to list.name, list %> (<%= list.description %>)
				<%= link_to "delete", list,class: "text-danger", method: :delete, data: { confirm: "You sure?" } %>
			</li>
		<% end %>
	</ol>
	<%= will_paginate %>
<% else %>
	<span>List not found!</span>
<% end %>